<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#A0A0A0</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">#10000000</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="increment_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
        tools:ignore /* API 17 Required */
        <item name="android:layout_marginEnd" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#123456</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="add_item_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:onClick">addItem</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="details_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#123456</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
